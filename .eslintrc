{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": "eslint-config-airbnb/base",
  "root": true,
  "rules": {
    "prefer-rest-params": 0,
    "comma-dangle": [2, "never"],
    "object-curly-spacing": [2, "never"],
    "no-unused-vars": 1,
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
